
.circle-type {
		height: 100rpx;
		width: 100%;
		background: rgb(250,250,250);
}
.circle-img {
		height: 80rpx;
		width: 80rpx;
		padding: 10rpx;
		float: left;
}
.circle-name {
		float: left;
}
.right-icon {
		float: right;
		height: 70rpx;
		width:  70rpx;
		padding: 15rpx;
}
.message-detail {
		width: 95%;
		height: auto;
		padding: 20rpx;
		overflow: auto;
		background: #FFFFFF;
}
.message-text {
		width: auto;
		height: auto;
		float: left;
}
.message-belong {
		width: 100%;
		height: 90rpx;
		border-bottom: solid 3rpx rgb(200, 200, 200);
		background: #FFFFFF;
}
.head {
		height: 70rpx;
		width: 70rpx;
		float: left;
		padding: 10rpx;
}
.name {
		width: auto;
		font-size: 20rpx;
}
.message-modify {
		width: 100%;
		height: 50rpx;
		white-space: nowrap;
		background: #FFFFFF;
}
.message-modify-module {
		float: left;
		width: 200rpx;
        padding-left: 15rpx;
		height: inherit;
		display:inline-block
}
.modify-icon {
		float: left;
		height: 40rpx;
		padding: 5rpx;
		width: 40rpx;
}

